doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width')
    title= title
    block css
    link(rel='stylesheet', href='/css/style.css')
    link(rel='stylesheet', href='/components/font-awesome/css/font-awesome.css')
    block js
      script(src='/components/angular/angular.min.js')
      script(src='/components/angular-route/angular-route.min.js')
      script(src='/js/app.js')
      script(src='/js/controllers/main.js')
      script(src='/js/controllers/survey-detail.js')
      script(src='/js/navigation/navigation.js')
      script(src='/js/appRoutes.js')
      script(src='/js/filter/average-rating.js')
      if ENV_DEVELOPMENT
        script(src='http://localhost:35729/livereload.js')
  body(ng-app='app',ng-controller='main')
    div(class='container')
      header
        nav(class="navbar navbar-default",navigation-bar)
      section(ng-view,class="")
    block content
